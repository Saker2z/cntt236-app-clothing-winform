@section scripts{
    <script src="~/Content/assets/js/single_custom.js"></script>
    <script>
    $(document).ready(function () {
    // Khi chọn màu
    $("input[name='color']").change(function () {
        let colorId = $(this).val();
        let productId = "@Model.Id";

        // Xóa kích thước hiện tại
        $("#size-options-container").empty();

        // Gọi API lấy danh sách kích thước theo màu sắc
        $.getJSON(`/Products/GetSizesByColor`, { productId: productId, colorId: colorId }, function (sizes) {
            if (sizes.length > 0) {
                sizes.forEach(size => {
                    let sizeOption = `
                        <label class="size-option ${size.QuantityInStock === 0 ? 'disabled' : ''}">
                            <input type="radio" name="size" value="${size.Id}" data-price="${size.AdditionalPrice}" ${size.QuantityInStock === 0 ? 'disabled' : ''}>
                            <span class="size-name">${size.Name}</span>
                        </label>
                    `;
                    $("#size-options-container").append(sizeOption);
                });

                // Sau khi thêm các kích thước, gắn sự kiện change cho các input size
                $("input[name='size']").change(updatePrice);
            } else {
                $("#size-options-container").append("<p>No sizes available for this color.</p>");
            }

            // Gọi lại các hàm cập nhật liên quan (nếu có)
            updatePrice();
            updateAddToCartButton();
        });
    });

    // Hàm cập nhật nút "Add to Cart"
    function updateAddToCartButton() {
        const selectedSize = $("input[name='size']:checked").val();
        const inStock = $("input[name='size']:checked").closest(".size-option").find(".stock-info").text().includes("In stock");

        if (!selectedSize || !inStock) {
            $(".add_to_cart_button").addClass("disabled").attr("disabled", "disabled");
        } else {
            $(".add_to_cart_button").removeClass("disabled").removeAttr("disabled");
        }
    }

    // Gọi updatePrice khi chọn kích thước hoặc màu sắc
    $("input[name='color'], input[name='size']").change(updatePrice);

    function updatePrice() {
        let basePrice = parseFloat("@Model.Price"); // Lấy giá bình quân từ Model
        let colorPrice = parseFloat($("input[name='color']:checked").data("price") || 0);
        let sizePrice = parseFloat($("input[name='size']:checked").data("price") || 0);

        let totalPrice = basePrice * (1 + colorPrice + sizePrice);
        $(".product_price").text(totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));
    }


        // Gọi cập nhật giá mặc định khi tải trang
         updatePrice();

     });


        document.addEventListener("DOMContentLoaded", function () {
            const addToCartButton = document.querySelector(".btnAddToCart");

            addToCartButton.addEventListener("click", function (event) {
                event.preventDefault();

                const productId = "@Model.Id"; // Mã sản phẩm
                const productName = "@Model.Title"; // Tên sản phẩm
                const productImage = "@Model.Image"; // Hình ảnh sản phẩm
                const basePrice = parseFloat("@Model.Price"); // Giá cơ bản
                const selectedColor = document.querySelector("input[name='color']:checked");
                const selectedSize = document.querySelector("input[name='size']:checked");

                if (!selectedColor || !selectedSize) {
                    alert("Vui lòng chọn màu sắc và kích thước trước khi thêm vào giỏ hàng!");
                    return;
                }

                const colorId = selectedColor.value;
                const colorName = selectedColor.nextElementSibling.textContent.trim();
                const sizeId = selectedSize.value;
                const sizeName = selectedSize.nextElementSibling.textContent.trim();

                const finalPriceElement = document.getElementById("finalPrice");
                let productPrice = finalPriceElement.textContent.trim(); 
                productPrice = productPrice.replace(/[^\d]/g, ""); 
                productPrice = parseFloat(productPrice); 

                const product = {
                    id: productId,
                    name: productName,
                    image: productImage,
                    price: productPrice,
                    quantity: 1,
                    notes: [
                        productId, // Mã sản phẩm
                        `${colorId},${colorName}`, 
                        `${sizeId},${sizeName}`, 
                    ]
                };

                let cart = JSON.parse(localStorage.getItem("cart")) || [];

                // Kiểm tra sản phẩm đã tồn tại trong giỏ hàng chưa
                const existingProductIndex = cart.findIndex(item =>
                    item.id === product.id &&
                    item.notes[1] === product.notes[1] &&
                    item.notes[2] === product.notes[2]
                );

                if (existingProductIndex !== -1) {
                    cart[existingProductIndex].quantity += 1; // Tăng số lượng nếu sản phẩm đã tồn tại
                } else {
                    cart.push(product); // Thêm sản phẩm mới
                }

                localStorage.setItem("cart", JSON.stringify(cart)); // Lưu giỏ hàng vào LocalStorage

                alert(`${product.name} (Màu: ${colorName}, Kích thước: ${sizeName}) đã được thêm vào giỏ hàng!`);
            });
        });



    </script>


}
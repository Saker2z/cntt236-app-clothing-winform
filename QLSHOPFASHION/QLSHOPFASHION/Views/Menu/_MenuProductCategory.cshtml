@model IEnumerable<BanHangThoiTrangMVC.Controllers.ProductCategoryViewModel>





@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Slider Wrapper -->
                    <div class="owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {
                            <div class="banner_item align-items-center" style="background-image: url(@item.Icon)">
                                <div class="banner_category">
                                    <a href="/danh-muc-san-pham/@item.Alias-@item.Id">@item.Title</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
